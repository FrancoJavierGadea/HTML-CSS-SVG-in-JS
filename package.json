{
    "name": "template-comment-highlighter",
    "displayName": "Template Comment Highlighter",
    "description": "Highlight template strings with /*html*/ or /*svg*/ as HTML or SVG inside JS/TS files",
    "version": "0.0.1",
    "publisher": "Franco Javier Gadea",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": ["Programming Languages"],
    "contributes": {
        "grammars": [
            {
                "scopeName": "template.comment.html.injection",
                "path": "./syntaxes/inyections-html-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"]
            },
            {
                "scopeName": "template.comment.css.injection",
                "path": "./syntaxes/inyections-css-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"]
            },
            {
                "scopeName": "template.comment.svg.injection",
                "path": "./syntaxes/inyections-svg-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"]
            }
        ]
    }
}