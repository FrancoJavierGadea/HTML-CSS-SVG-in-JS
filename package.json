{
    "name": "vscode-html-css-svg-in-js",
    "description": "Syntax highlighting for inline HTML, CSS, SVG, XML in JavaScript and TypeScript template strings using /*html*/, /*css*/ /*svg*/ /*xml*/.",
    "keywords": [ "html", "css", "svg", "xml", "syntax highlighting", "template strings", "inline html", "inline css", "inline svg", "javascript", "typescript", "jsx", "tsx", "vscode extension"],
    "version": "0.0.2",
    "author": "Franco Javier Gadea",
    "repository": {
        "type": "git",
        "url": "https://github.com/extensions-1812/vscode-html-css-svg-in-js"
    },
    "devDependencies": {
        "@vscode/vsce": "^3.6.0"
    },
    "scripts": {
        "build": "vsce package --out dist/html-css-svg-in-js-0.0.2.vsix"
    },
    "displayName": "HTML CSS SVG in JS",
    "publisher": "1812",
    "categories": [
        "Programming Languages"
    ],
    "icon": "./logo.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "contributes": {
        "grammars": [
            {
                "path": "./syntaxes/languages/html-with-js.tmLanguage.json",
                "scopeName": "text.html.withjs"
            },
            {
                "path": "./syntaxes/languages/xml-with-js.tmLanguage.json",
                "scopeName": "text.xml.withjs"
            },
            {
                "path": "./syntaxes/languages/css-with-js.tmLanguage.json",
                "scopeName": "source.css.withjs"
            },
            {
                "scopeName": "template.comment.html.injection",
                "path": "./syntaxes/inyections/inyections-html-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"],
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html"
                }
            },
            {
                "scopeName": "template.comment.xml.injection",
                "path": "./syntaxes/inyections/inyections-xml-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"],
                "embeddedLanguages": {
                    "meta.embedded.block.xml": "xml"
                }
            },
            {
                "scopeName": "template.comment.css.injection",
                "path": "./syntaxes/inyections/inyections-css-in-js.json",
                "injectTo": ["source.js", "source.ts", "source.tsx"],
                "embeddedLanguages": {
                    "meta.embedded.block.css": "css"
                }
            }
        ],
        "snippets": [
            {
                "language": "javascript",
                "path": "./snippets/template-comment-blocks.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/template-comment-blocks.json"
            },
            {
                "language": "javascriptreact",
                "path": "./snippets/template-comment-blocks.json"
            },
            {
                "language": "typescriptreact",
                "path": "./snippets/template-comment-blocks.json"
            }
        ]
    }
}
