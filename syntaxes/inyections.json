{
  "scopeName": "template.comment.injection",
  "injectionSelector": "L:source.js -comment",
  "patterns": [
    {
      "begin": "/\\*html\\*/\\s*`",
      "end": "`",
      "name": "string.quoted.template.html.js",
      "patterns": [
        {
          "include": "text.html.basic"
        }
      ]
    },
    {
      "begin": "/\\*svg\\*/\\s*`",
      "end": "`",
      "name": "string.quoted.template.svg.js",
      "patterns": [
        {
          "include": "text.xml.svg"
        }
      ]
    }
  ]
}
