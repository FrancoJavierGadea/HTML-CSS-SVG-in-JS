				{
					"include": "text.xml.svg"
				},
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "source.js.embedded.expression",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		{
			"begin": "/\\*css\\*/\\s*`",
			"end": "`",
			"name": "string.quoted.template.css.js",
			"patterns": [
				{
					"include": "source.css"
				},
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"name": "source.js.embedded.expression",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		}
	]
}
