{
	"name": "HTML-in-JS",
	"scopeName": "template.comment.html.injection",
	"comment": "",
	"injectionSelector": "L:source.js -comment -(string -meta.embedded), L:source.ts -comment -(string -meta.embedded), L:source.tsx -comment -(string -meta.embedded)",
	"patterns": [
		{
			"comment": "Template literal HTML precedido por comentario /*html*/",
			"name": "string.template.html.js",
			"begin": "(/\\*\\s*html\\s*\\*/)\\s*(`)",
			"beginCaptures": {
				"1": { "name": "comment.block.html-template.js" },
				"2": { "name": "punctuation.definition.string.template.begin.js string.template.html.js" }
			},
			"end": "(`)",
			"endCaptures": {
				"1": { "name": "punctuation.definition.string.template.end.js string.template.html.js" }
			},
			"contentName": "meta.embedded.block.html",
			"patterns": [
				{
					"include": "text.html.basic"
				}
			]
		}
	]
}